package node

import (
	"context"

	"mmesh.dev/m-cli/pkg/grpc"
	"mmesh.dev/m-cli/pkg/output"
	"mmesh.dev/m-cli/pkg/status"
)

func (api *API) ResetNetworkTraffic() {
	n := GetNode(false)

	nxc, grpcConn := grpc.GetCoreAPIClient()
	defer grpcConn.Close()

	s := output.Spinner()

	node, err := nxc.ResetNodeNetworkTraffic(context.TODO(), n)
	if err != nil {
		status.Error(err, "Unable to reset traffic matrix")
	}

	s.Stop()

	Output().Show(node)
}
