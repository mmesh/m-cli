package pro

import (
	"context"

	"mmesh.dev/m-cli/pkg/grpc"
	"mmesh.dev/m-cli/pkg/output"
	"mmesh.dev/m-cli/pkg/status"
)

func (api *API) Delete(providerAccount bool) {
	sc := GetServiceContract(providerAccount)

	nxc, grpcConn := grpc.GetServicesAPIClient(true)
	defer grpcConn.Close()

	output.ConfirmDeletion()

	s := output.Spinner()

	sr, err := nxc.DeleteServiceContract(context.TODO(), sc)
	if err != nil {
		status.Error(err, "Unable to delete service contract")
	}

	s.Stop()

	output.Show(sr)
}
